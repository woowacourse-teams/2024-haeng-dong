# 임시 Nginx 설정 (Certbot 인증용)
# 이 설정은 80번 포트만 사용하여 Certbot의 acme-challenge 요청을 처리합니다.
server {
    listen 80 reuseport;
    listen [::]:80 reuseport;
    server_name haengdong.pro;

    # Let's Encrypt 인증서 발급/갱신을 위한 경로
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
        allow all;
    }

    # 그 외 모든 요청은 임시로 404 Not Found 처리
    location / {
        return 404;
    }
}